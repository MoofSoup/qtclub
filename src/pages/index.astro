---
import Layout from '../layouts/Layout.astro';
import SaveTheQRC from '../components/SaveTheQRC.astro';
import MeetingsCard from '../components/MeetingsCard.astro';
import EventCard from '../components/EventCard.astro';
import BlogCard from '../components/BlogCard.astro';
---

<Layout title="Home">
    <!-- Hero Section with Save The QRC button -->
    <SaveTheQRC />

    <!-- Main Content Section -->
    <section class="container mx-auto px-4 py-12">
        <h2 class="text-3xl font-bold mb-8 text-center text-raisin-black text-6xl">Hello QT Club!</h2>

        <hr class="w-48 mx-auto mb-8 border-raisin-black" />

        <div class="max-w-3xl mx-auto text-raisin-black">
            <p class="text-lg mb-6 font-sans">
                The QT Club is a safe and supportive space for queer and transgender students and their allies. We organize events, discussions, and activities
                to foster community and promote awareness.
            </p>
        </div>
    </section>
</Layout>
