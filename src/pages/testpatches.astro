---
// testpatches.astro
import Layout from '../layouts/Layout.astro';
import Patch from '../components/Patch.astro';
import MTile from '../components/MTile.astro';
---

<Layout title="Mondrian Grid">
    <!-- Grid container with CSS variables for grid units -->
    <div
        class="grid-container"
        style="
            display: grid;
            grid-template-columns: repeat(31, 1fr);
            grid-auto-rows: 1fr;
            
            width: 100%;
            max-width: 1200px;
            margin: 5rem auto;
    
        "
    >
        <!-- 1, 1, 8 x 7 -->
        <MTile color="var(--color-moonstone)" rowStart={1} colStart={1} width={8} height={7}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Second tile -->
        <MTile color="var(--color-bittersweet)" colStart={9} rowStart={1} width={9} height={7}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Third tile -->
        <MTile color="var(--color-asparagus)" colStart={18} rowStart={1} width={7} height={7}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Fourth tile -->
        <MTile color="var(--color-wine)" colStart={25} rowStart={1} width={7} height={9}>
            <Patch author="TestimonialCard" />
        </MTile>
        <!-- Fifth tile -->
        <MTile color="var(--color-asparagus)" colStart={1} rowStart={8} width={9} height={7}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Sixth tile -->
        <MTile color="var(--color-moonstone)" colStart={10} rowStart={8} width={8} height={8}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Seventh tile -->
        <MTile color="var(--color-bittersweet)" colStart={18} rowStart={8} width={7} height={7}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Seventh tile -->
        <MTile color="var(--color-moonstone)" colStart={25} rowStart={10} width={7} height={7}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Eigth tile -->
        <MTile color="var(--color-bittersweet)" colStart={1} rowStart={15} width={9} height={9}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Ninth tile -->
        <MTile color="var(--color-asparagus)" colStart={10} rowStart={16} width={8} height={8}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Tenth tile -->
        <MTile color="var(--color-wine)" colStart={18} rowStart={15} width={7} height={9}>
            <Patch author="TestimonialCard" />
        </MTile>

        <!-- Eleventh tile -->
        <MTile color="var(--color-asparagus)" colStart={25} rowStart={17} width={7} height={7}>
            <Patch author="TestimonialCard" />
        </MTile>
    </div>
</Layout>
