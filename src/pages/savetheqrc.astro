---
import Layout from '../layouts/Layout.astro';
import TestimonialPatch from '../components/TestimonialPatch.astro';

// In a real implementation, this would come from your content collection
const testimonials = [
    { author: 'Nico', highlightColor: 'yellow-green', patchSize: 'md', slug: 'nico' },
    { author: 'Alex', highlightColor: 'caramel', patchSize: 'lg', slug: 'alex' },
    { author: 'Jordan', highlightColor: 'citrine', patchSize: 'sm', slug: 'jordan' },
    { author: 'Taylor', highlightColor: 'french-blue', patchSize: 'md', slug: 'taylor' },
    { author: 'Sam', highlightColor: 'yellow-green', patchSize: 'lg', slug: 'sam' },
    { author: 'Riley', highlightColor: 'caramel', patchSize: 'sm', slug: 'riley' }
];
---

<Layout title="Save The QRC">
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold mb-4 text-center">Save The QRC</h1>
        <p class="text-lg max-w-2xl mx-auto text-center mb-12">
            The Queer Resource Center is a vital space for our community. Here are stories from students about what the QRC means to them.
        </p>

        <!-- Testimonial Patches Grid -->
        <div class="flex flex-wrap justify-center gap-6">
            {
                testimonials.map((testimonial) => (
                    <TestimonialPatch
                        author={testimonial.author}
                        highlightColor={testimonial.highlightColor}
                        patchSize={testimonial.patchSize}
                        slug={testimonial.slug}
                    />
                ))
            }
        </div>
    </div>
</Layout>
