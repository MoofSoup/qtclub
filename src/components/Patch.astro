---
import testImage from '../assets/test.jpg';
interface Props {
    author: string;
    color: string;
}
const { author, color } = Astro.props;
---

<style>
    .content {
        transform: translate(0, 0);
        transition: transform 0.2s ease-out;
    }
    .content:hover {
        transform: translate(-2px, -2px);
    }

    .shadow {
        opacity: 0;
        transform: translate(0, 0);
        transition: all 0.2s ease-out;
    }
    .content:hover + .shadow {
        opacity: 1;
        transform: translate(8px, 8px);
    }
</style>

<div class="content group" style="position: absolute; inset: 0; padding: 9px;">
    <div class="content" style="position: relative; width: 100%; height: 100%; overflow: hidden; z-index: 10; transition: transform 0.2s;">
        <div style="width: 100%; height: 120%;">
            <img src={testImage.src} style="width: 100%; height: 100%; object-fit: cover; object-position: top;" alt={`Portrait of ${author}`} />

            <div
                style="position: absolute; left: 0; right: 0; bottom: 0; height: 33%; background: linear-gradient(to top, var(--color-raisin-black) 0%, var(--color-raisin-black) 30%, transparent 90%);"
            >
                <div
                    style="position: absolute; bottom: 16px; width: 100%; text-align: center;"
                    class="text-old-lace text-xl font-serif group-hover:text-wine-light transition-colors duration-75"
                >
                    {author}
                </div>
            </div>
        </div>
    </div>

    <div
        class="shadow"
        style={`
        position: absolute; 
        top: 12px; 
        left: 12px; 
        bottom: 12px; 
        right: 12px; 
        z-index: -1;
        background-color: ${color};
        transition: all 0.2s;
    `}
    >
    </div>
</div>
